{% assign versionCache = site.time|date: "%Y-%m-%d_%H-%M-%S" %}

<!DOCTYPE html>
<html lang="en-US">

<head>
    {% comment %}
    stuff that needs to be first
    {% endcomment %}
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

    {% comment %}
    site information
    {% endcomment %}
    <title>{{ page.title }}</title>
    <meta name="description" content="{{ site.description }}">
    <base href="{{ site.baseurl }}">
    <link rel="home" href="{{ site.baseurl }}">

    {% comment %}
    stuff for robots
    {% endcomment %}
    <meta name="robots" content="index,follow,noodp">
    <meta name="googlebot" content="index,follow">

    {% comment %}
    open graph
    {% endcomment %}
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="{{ site.name }}">
    <meta property="og:title" content="{{ page.title }}">
    <meta property="og:description" content="{{ site.description }}">
    <meta property="og:url" content="{{ site.baseurl }}{{ page.url }}">

    {% comment %}
    style and icons
    {% endcomment %}
    <link href="{{ site.baseurl }}/css/normalize.css" rel="stylesheet" media="all">
    <link href="{{ site.baseurl }}/css/index.css" rel="stylesheet" media="all">
    <link rel="icon" href="{{ site.baseurl }}/favicon.ico?{{ versionCache }}">

    {% comment %}
    scripts
    {% endcomment %}
    <!--[if lt IE 9]><script src="js/html5shiv-printshiv.js" media="all"></script><![endif]-->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-one-page-nav/3.0.0/jquery.nav.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-scrollTo/2.1.2/jquery.scrollTo.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.1/moment.min.js"></script>
    <script type="text/javascript" src="{{site.baseurl}}/js/responsiveslides.min.js"></script>
    <script type="text/javascript" src="{{site.baseurl}}/js/kobo.js"></script>
</head>

<body>
    <header role="banner">
        <h1><a href="{{site.baseurl}}/#section-1">KoBoToolbox</a></h1>
        <nav role="navigation">
            <ul id="nav">
                <li class="hide-mobile"><a href="{{site.baseurl}}/#section-1">Home</a></li>
                <li class="hide-mobile"><a href="{{site.baseurl}}/#features">Features</a></li>
                <li><a href="{{site.baseurl}}/#sign-up">Sign Up</a></li>
                <li class="hide-mobile"><a href="{{site.baseurl}}/#about">About</a></li>
                {% if page.isBlog %}
                    <li class="hide-mobile current"><a href="{{site.baseurl}}/blog">Blog</a></li>
                {% else %}
                    <li class="hide-mobile"><a href="{{site.baseurl}}/#blog">Blog</a></li>
                {% endif %}
                <li class="hide-mobile"><a href="{{site.baseurl}}/#help">Help</a></li>
            </ul>
        </nav>
    </header>
